<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mdc="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui"
             xmlns:icon="clr-namespace:IconPacks.IconKind;assembly=IconPacks.Material"
             x:Class="FitnessStudioApp.Views.RegisterPage"
             Title="">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand" >
        <Image Source="login_photo.png" WidthRequest="200" Aspect="AspectFit"></Image>
        <Label FontSize="30" FontAttributes="Bold" HorizontalOptions="Center">Registration</Label>
        <mdc:TextField x:Name="tb_username" Style="{DynamicResource OutlinedTextFieldStyle}" WidthRequest="250" LabelText="Username" SupportingText="" InputType="SingleLine" SupportingFontColor="Red" BackgroundColor="Transparent" />
        <mdc:TextField x:Name="tb_email" Style="{DynamicResource OutlinedTextFieldStyle}" WidthRequest="250" LabelText="Email" SupportingText="" InputType="SingleLine" SupportingFontColor="Red" BackgroundColor="Transparent" />
        <mdc:TextField x:Name="tb_password" TrailingIconClicked="tb_password_TrailingIconClicked" Style="{DynamicResource OutlinedTextFieldStyle}" WidthRequest="250" LabelText="Password" InputType="Password" SupportingFontColor="Red" Margin="10,0,0,0" SupportingText="" BackgroundColor="Transparent" TrailingIconData="{Static icon:Material.VisibilityOff}"/>
        <mdc:TextField x:Name="tb_passwordRepeat" TrailingIconClicked="tb_passwordRepeat_TrailingIconClicked" Style="{DynamicResource OutlinedTextFieldStyle}" WidthRequest="250" LabelText="Password" InputType="Password" SupportingFontColor="Red" Margin="10,0,0,0" SupportingText="" BackgroundColor="Transparent" TrailingIconData="{Static icon:Material.VisibilityOff}"/>
        <mdc:Button x:Name="bt_register" Clicked="bt_register_Clicked" Style="{DynamicResource FilledButtonStyle}" WidthRequest="250" HeightRequest="50" FontSize="20" Text="Register" Margin="10" FontColor="White" BackgroundColor="Orange"/>
        <mdc:Button Style="{StaticResource TextButtonStyle}" Text="Sign in" x:Name="bt_signIn" Clicked="bt_signIn_Clicked"  FontWeight="Bold" FontColor="Orange"/>
    </VerticalStackLayout>
</ContentPage>