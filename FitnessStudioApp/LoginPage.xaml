<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mdc="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui"
             x:Class="FitnessStudioApp.LoginPage" Title="Login"
             >
    <NavigationPage.TitleView>
        <Label
            x:Name="Title"
            HorizontalTextAlignment="Center"
            Text="Login"/>
    </NavigationPage.TitleView>
    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        <mdc:TextField Style="{DynamicResource OutlinedTextFieldStyle}" WidthRequest="250" LabelText="Username" SupportingText="Enter username" InputType="SingleLine"/>
        <mdc:TextField Style="{DynamicResource OutlinedTextFieldStyle}" WidthRequest="250" LabelText="Password" InputType="Password" Margin="10" SupportingText="Enter password"/>
        <mdc:Button Style="{DynamicResource FilledButtonStyle}" WidthRequest="250" Text="Login" Margin="10"/>
        <mdc:Button Style="{StaticResource TextButtonStyle}" Text="Create acount" />
    </VerticalStackLayout>
</ContentPage>